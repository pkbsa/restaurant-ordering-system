    <script>
        var additionalChoices = [];

        function addAdditionalChoice() {
            var choiceIndex = additionalChoices.length + 1;

            var choiceContainer = document.createElement('div');
            choiceContainer.innerHTML = `
            <div class="card">
                <div class="card-body">
                    <label for="choiceTitle${choiceIndex}">Title</label>
                    <input type="text" class="form-control" name="choiceTitle${choiceIndex}" id="choiceTitle${choiceIndex}">
                    <div id="choiceOptions${choiceIndex}">
                        <div class="row">
                            <div class="col">
                                <label for="choice${choiceIndex}-1">Choice</label>
                                <input type="text" class="form-control" name="choice${choiceIndex}-1" id="choice${choiceIndex}-1">
                            </div>
                            <div class="col">
                                <label for="price${choiceIndex}-1">Price</label>
                                <input type="number" class="form-control" name="price${choiceIndex}-1" id="price${choiceIndex}-1">
                            </div>
                        </div>
                    </div>
                    <button type="button" class="btn btn-secondary" onclick="addChoice(${choiceIndex})">Add Choice</button>
                </div>
            </div>
        `;

            document.getElementById('additionalChoicesContainer').appendChild(choiceContainer);
        }

        function addChoice(choiceIndex) {
            var choiceOptionsContainer = document.getElementById(`choiceOptions${choiceIndex}`);

            var choiceCount = choiceOptionsContainer.children.length + 1;

            var choiceContainer = document.createElement('div');
            choiceContainer.innerHTML = `
            <div>
                <div class="row">
                    <div class="col">
                        <label for="choice${choiceIndex}-${choiceCount}">Choice</label>
                        <input type="text" class="form-control" name="choice${choiceIndex}-${choiceCount}" id="choice${choiceIndex}-${choiceCount}">
                    </div>
                    <div class="col">
                        <label for="price${choiceIndex}-${choiceCount}">Price</label>
                        <input type="number" class="form-control" name="price${choiceIndex}-${choiceCount}" id="price${choiceIndex}-${choiceCount}">
                     </div>
                </div>
            </div>
        `;

            choiceOptionsContainer.appendChild(choiceContainer);
        }

        document.getElementById('additionalChoicesForm').addEventListener('submit', function (event) {
            event.preventDefault();

            additionalChoices = [];

            var choiceContainers = document.getElementById('additionalChoicesContainer').children;
            for (var i = 0; i < choiceContainers.length; i++) {
                var choiceContainer = choiceContainers[i];
                var choiceIndex = i + 1;

                var choiceTitle = document.getElementById(`choiceTitle${choiceIndex}`).value;

                var choices = [];
                var prices = [];

                var choiceOptions = choiceContainer.querySelectorAll(`[id^="choice${choiceIndex}-"]`);
                for (var j = 0; j < choiceOptions.length; j++) {
                    var choiceOption = choiceOptions[j];
                    var choice = choiceOption.value;
                    choices.push(choice);

                    var priceOption = document.getElementById(`price${choiceIndex}-${j + 1}`);
                    var price = Number(priceOption.value);
                    prices.push(price);
                }

                additionalChoices.push({
                    title: choiceTitle,
                    choices: choices,
                    prices: prices
                });
            }

            console.log(additionalChoices);
        });
