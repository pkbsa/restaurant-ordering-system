    <script>
        // Get the source table and destination table
        const sourceTable = document.getElementById('myTable');
        const destinationTable = document.getElementById('myTable2');

        // Get the source and destination tbody elements
        const sourceTbody = sourceTable.getElementsByTagName('tbody')[0];
        const destinationTbody = document.getElementById('receivedOrder');

        // Get the rows with orderStatus "Order Received"
        const receivedRows = Array.from(sourceTbody.getElementsByTagName('tr')).filter(row => row.querySelector('p')?.textContent === 'Order Received');

        // Move the received rows to the destination tbody
        receivedRows.forEach(row => {
            const newRow = row.cloneNode(true);
            destinationTbody.appendChild(newRow);
        });


        var dropdowns = document.querySelectorAll('.form-control');

        dropdowns.forEach(function (dropdown) {
            if (dropdown.tagName === 'SELECT') {
                var orderId = dropdown.id.split('+')[0];

                var selectedValue = document.getElementById(`${orderId}-status`).value;

                var options = dropdown.options;

                for (var i = 0; i < options.length; i++) {
                    if (options[i].value === selectedValue) {
                        options[i].selected = true;
                        break;
                    }
                }
            }
        });



