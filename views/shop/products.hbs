<div class="container page-products">
    <div class="foodnav">
        <ul>
            <li><a href="/menu">PYE DISHES</a></li>
            <li><a href="/menu/noodles">PYE NOODLES</a></li>
            <li><a href="/menu/vegetarian">PYE VEGETARIAN</a></li>
            <li><a href="/menu/drinks">DRINK & DESERT</a></li>
        </ul>
        <ul>
            {{#if login }}

            <div class="delivery">
                <div class="textoverflow">
                    <p>Delivery to : {{user.address}} </p>
                </div>
                <a href="/user/adddeliverylocation" id="change">Change</a>
            </div>
            <li>
                <a href="/shopping-cart">
                    <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                    <span class="badge bg-secondary">{{session.cart.totalQty}}</span>
                    $ {{totalPrice}}
                </a>
            </li>

            {{else}}
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">START MY
                ORDER</button>
            <li>
                <a href="/shopping-cart">
                    <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                    <span class="badge bg-secondary">{{session.cart.totalQty}}</span>
                    $ 0
                </a>
            </li>
            {{/if}}

        </ul>
    </div>

    <div class="snack">
        <div class="container">
            <h2>PYE SNACKS</h2>
            <div class="row">
                {{#each snacks}}
                <div class="col-6 col-sm-6">
                    <div class="card mb-3" style="max-width: 540px;">
                        <div class="row g-0">
                            <div class="col-md-5">
                                <img src="{{ this.imagePath.[0] }}" class="img-fluid rounded-start" alt="...">
                            </div>
                            <div class="col-md-7">
                                <div class="card-body">
                                    <h5 class="card-title">{{this.title}}</h5>
                                    <p class="card-text">{{this.description}}</p>
                                    {{#unless ../login}}
                                    <button class="form-control" data-bs-toggle="modal"
                                        data-bs-target="#exampleModal">+${{this.price}}</button>

                                    {{else}}

                                    <a href="/add-to-cart/{{this._id}}"><button
                                            class="form-control">+${{this.price}}</button></a>
                                    {{/unless}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{#if @index.isEven}}
                <!-- Add div after every even index -->
                <div class="w-100 d-none d-md-block"></div>
                {{/if}}
                {{/each}}
            </div>
        </div>
    </div>
    <div class="rice">
        <div class="container">
            <h2>PYE OVER RICE</h2>
            <div class="row">
                {{#each rice}}
                <div class="col-6 col-sm-6">
                    <div class="card mb-3" style="max-width: 540px;">
                        <div class="row g-0">
                            <div class="col-md-5">
                                <img src="{{ this.imagePath.[0] }}" class="img-fluid rounded-start" alt="...">
                            </div>
                            <div class="col-md-7">
                                <div class="card-body">
                                    <h5 class="card-title">{{this.title}}</h5>
                                    <p class="card-text">{{this.description}}</p>

                                    {{#unless ../login}}
                                    <button class="form-control" data-bs-toggle="modal"
                                        data-bs-target="#exampleModal">+${{this.price}}</button>

                                    {{else}}

                                    <a href="/add-to-cart/{{this._id}}"><button
                                            class="form-control">+${{this.price}}</button></a>
                                    {{/unless}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{#if @index.isEven}}
                <!-- Add div after every even index -->
                <div class="w-100 d-none d-md-block"></div>
                {{/if}}
                {{/each}}
            </div>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-body">
                    <div class="close-btn">
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <a href="/user/signin" id='signin' class="form-control">Sign In</a>
                    <p>Your first order? <a href="#">Sign Up</a></p>
                </div>

            </div>
        </div>
    </div>
</div>

<script src='/stylesheets/products.js'></script>